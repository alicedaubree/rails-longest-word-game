<h2 class="mt-5 text-center">New game</h2>
<ul class="mt-5 text-center">
  <% @letters.each do |letter| %>
    <li class= "btn-primary p-5 rounded-1 d-inline-block"><strong><%= letter %></strong></li>
  <% end %>
</ul>

<div class = "container m-5 justify-content-center">
<div class="row">
<div class="col-12">
<form action="score" method="post" data-turbo="false" class="row">
<div class="col-lg-9 text-center">
  <input type="text" name="guess" class="form-control">
</div>
<div class="col-lg-3">
  <button type="submit" value="Play" class="btn btn-primary mb-3">Play</button>
<div>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
</form>
</div>
</div>
</div>
